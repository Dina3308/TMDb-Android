<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="ru.kpfu.itis.tmdb.presentation.movies.MoviesFragment"
        android:label="MoviesFragment" >
        <action
            android:id="@+id/movieDetails"
            app:destination="@+id/detailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.kpfu.itis.tmdb.presentation.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/multiDetails"
            app:destination="@+id/detailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/tvShowsFragment"
        android:name="ru.kpfu.itis.tmdb.presentation.tv_shows.TvShowsFragment"
        android:label="TvShowsFragment" >
        <action
            android:id="@+id/tvShowDetails"
            app:destination="@+id/detailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="ru.kpfu.itis.tmdb.presentation.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="itemId"
            app:argType="integer"
            android:defaultValue="0"/>
    </fragment>
</navigation>